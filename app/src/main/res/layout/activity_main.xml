<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Pantalla de resultados -->

    <Button
        android:id="@+id/button25"
        android:layout_width="175dp"
        android:layout_height="81dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="96dp"
        android:text="Settings"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/buttonAC"
        app:layout_constraintTop_toBottomOf="@id/button1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:text="0"
        android:textSize="48sp"
        android:textStyle="bold"
        android:gravity="end|center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Fila 1: AC, C, %, / -->
    <Button
        android:id="@+id/buttonAC"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="AC"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonC"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="C"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/buttonAC"
        app:layout_constraintStart_toEndOf="@id/buttonAC"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/buttonPercent"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="%"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/buttonAC"
        app:layout_constraintStart_toEndOf="@id/buttonC"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="/"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/buttonAC"
        app:layout_constraintStart_toEndOf="@id/buttonPercent"
        android:layout_marginStart="16dp" />

    <!-- Fila 2: 7, 8, 9, × -->
    <Button
        android:id="@+id/button7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="7"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/buttonAC"
        app:layout_constraintStart_toStartOf="@id/buttonAC"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="8"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/button7"
        app:layout_constraintStart_toStartOf="@id/buttonC" />

    <Button
        android:id="@+id/button9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="9"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/button7"
        app:layout_constraintStart_toStartOf="@id/buttonPercent" />

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="×"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/button7"
        app:layout_constraintStart_toStartOf="@id/buttonDivide" />

    <!-- Fila 3: 4, 5, 6, - -->
    <Button
        android:id="@+id/button4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="4"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/button7"
        app:layout_constraintStart_toStartOf="@id/buttonAC"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="5"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/button4"
        app:layout_constraintStart_toStartOf="@id/buttonC" />

    <Button
        android:id="@+id/button6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="6"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/button4"
        app:layout_constraintStart_toStartOf="@id/buttonPercent" />

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="-"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/button4"
        app:layout_constraintStart_toStartOf="@id/buttonDivide" />

    <!-- Fila 4: 1, 2, 3, + -->
    <Button
        android:id="@+id/button1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="1"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/button4"
        app:layout_constraintStart_toStartOf="@id/buttonAC"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="2"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/button1"
        app:layout_constraintStart_toStartOf="@id/buttonC" />

    <Button
        android:id="@+id/button3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="3"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/button1"
        app:layout_constraintStart_toStartOf="@id/buttonPercent" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="+"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/button1"
        app:layout_constraintStart_toStartOf="@id/buttonDivide" />

    <!-- Fila 5: 0, ., = -->
    <Button
        android:id="@+id/button0"
        android:layout_width="175dp"
        android:layout_height="81dp"
        android:layout_marginTop="16dp"
        android:text="0"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/buttonAC"
        app:layout_constraintTop_toBottomOf="@id/button1" />

    <Button
        android:id="@+id/buttonDot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="."
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/button0"
        app:layout_constraintStart_toEndOf="@id/button0"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/buttonEquals"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="="
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/button0"
        app:layout_constraintStart_toEndOf="@id/buttonDot"
        android:layout_marginStart="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>